<resources xmlns:android="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <!--    <item name="colorPrimary">@color/colorPrimary</item>
            <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
            <item name="colorAccent">@color/colorAccent</item>-->
    </style>

    <style name="CustomDatePickerDialog" parent="android:style/Theme.Holo.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowEnterAnimation">@anim/bottom_in</item>
        <item name="android:windowExitAnimation">@anim/bottom_out</item>
    </style>

    <style name="TextSecond.item_value">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginLeft">@dimen/item_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginRight">@dimen/item_margin</item>
        <item name="android:layout_gravity">end|center_vertical</item>
        <item name="android:background">@null</item>
        <item name="android:gravity">end|center_vertical</item>
        <item name="android:textColorHint">@color/divider</item>
    </style>


    <style name="TextMain.item_flag">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/item_margin</item>
        <item name="android:lines">1</item>
    </style>

    <style name="item_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_107_dip</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/item_bg</item>
    </style>


    <style name="TextMain">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_30</item>
        <item name="android:textColor">@color/textMain</item>
    </style>

    <style name="TextSecond">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_28</item>
        <item name="android:textColor">@color/textSecond</item>
    </style>


    <style name="order_detail_divider">
        <item name="android:layout_height">@dimen/dimen_3_dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/divider_shape</item>
        <item name="android:layout_marginLeft">@dimen/dimen_3_dip</item>
        <item name="android:layout_marginRight">@dimen/dimen_3_dip</item>
    </style>

    <style name="order_detail_divider_2">
        <item name="android:layout_height">@dimen/dimen_3_dip</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/divider_shape</item>
        <item name="android:layout_marginLeft">@dimen/item_margin</item>
        <item name="android:layout_marginRight">@dimen/item_margin</item>
    </style>
</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100_dip"
        android:background="@color/primary"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/font_32" />

    <ListView
        android:id="@+id/dialog_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/textSecond"
        android:dividerHeight="@dimen/dimen_1_dip"
        android:paddingLeft="@dimen/dimen_24_dip"
        android:paddingRight="@dimen/dimen_24_dip"></ListView>
</LinearLayout>